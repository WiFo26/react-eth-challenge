.Interest-desc
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    margin: 5px 10px 0px 10px
    text-align: justify
    font-size: 1.2em

.Interest-desc img
    width 300px
    border-radius: 10px
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)
    margin-bottom: 10px  

@media (max-width 768px)
    .Interest-desc
        font-size: 1em

    .Interest-desc img
        width 200px
        height 150px
        border-radius: 5px
        margin-bottom: 10px
    