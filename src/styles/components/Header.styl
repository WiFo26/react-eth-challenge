#header
    display flex
    justify-content: start

.profile-photo
    width 200px
    height 200px
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.4);
    border-radius 50%
    margin: 30px 40px

.info
    display flex
    flex-direction: column
    margin: 15px 10px

.Header-title
    font-size: 28px
    margin-bottom: 0px

@media (max-width 768px)
    #header
        display: flex
        flex-direction: column
        align-items: center
    .info
        display flex
        flex-direction: column
        margin 0px 0px 20px 0px
    .Header-title
        text-align: center
        